@using AQBooking.FileStream.Core.Models.FileResponse
@model List<FileViewModel>

<div class="table-responsive bootgrid table-bordered">
    <table class="table table-striped bootgrid-table">
        <thead>
            <tr>
                <th>ID</th>
                <th>File</th>
                <th>Original Name</th>
                <th>File Name</th>
                <th>File extention</th>
                <th>File Path</th>
                <th>Deleted</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.FileId</td>
                    <td><i class="fa-4x mr-2 fas fa-file-pdf"></i></td>
                    <td>@item.OriginalName</td>
                    <td>@item.FileName</td>
                    <td>@item.FileExtentions</td>
                    <td>@item.Path</td>
                    <td>@item.Deleted</td>
                    <td id="show_@item.FileId" class="text-center">
                        <a href="@ViewBag.Host@item.Path@item.FileName" target="_blank" class="btn btn-info mb-1" id="restore_@item.FileId" title="Create file from database"><i class="icon-cloud-download"></i></a>
                        <button class="btn btn-primary mb-1" id="restore_@item.FileId" title="Restore file"><em class="fas fa-recycle"></em></button>
                        <button class="btn btn-warning mb-1" id="delete_@item.FileId" title="Delete Image"><i class="fas fa-trash-alt"></i></button>
                        <button class="btn btn-danger mb-1" id="remove_@item.FileId" title="Remove from database"><i class="fas fa-fire"></i></button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="d-flex mt-3">
    <nav class="ml-auto">
        <aes-pagination info="@ViewBag.PaginatedModel" model="@ViewBag.SearchModel" url="@Url.Action("Index", "BrochureManagement")" update-target-id="divSearchResult"></aes-pagination>
    </nav>
</div>
