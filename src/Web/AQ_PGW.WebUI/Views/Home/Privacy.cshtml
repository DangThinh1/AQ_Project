    <div class="border mb-4" style="background-color:#ffffff">
        <div class="row">
            <div class="col-md-8 ml-3">
                <h5> Đơn hàng: @(currencyAmount)</h5>
            </div>
            <div class="col">
                Số tiền
            </div>
        </div>
    </div>
    <div style="text-align:center">
        <img src="~/img/listcard.png" />
